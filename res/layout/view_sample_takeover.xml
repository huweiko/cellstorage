<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#c4c4c4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="1dp"
            android:background="@color/white"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/ViewSample_paddingLeft"
                android:text="交接时表面温度："
                android:textColor="@color/gray"
                android:textSize="@dimen/ViewSample_TextSize" />

            <TextView
                android:id="@+id/TextViewTakeoverTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="5dp"
                android:textColor="@color/gray"
                android:textSize="@dimen/ViewSample_TextSize" />
        </LinearLayout>

        <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="60dp"
	        android:background="@color/white"
	        android:orientation="horizontal"
		    android:layout_marginBottom="1dp">
	        <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="@color/gray"
		        android:textSize="@dimen/ViewSample_TextSize"
		        android:layout_gravity="center_vertical"
		        android:paddingLeft="@dimen/ViewSample_paddingLeft"
		        android:text="样本量："/>
	        <TextView 
	            android:id="@+id/TextViewTakeoverCapacity"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="@color/gray"
		        android:textSize="@dimen/ViewSample_TextSize"
		        android:layout_gravity="center_vertical"
		        android:paddingLeft="5dp"/>
	    </LinearLayout>
        <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="60dp"
	        android:background="@color/white"
	        android:orientation="horizontal"
		    android:layout_marginBottom="1dp">
	        <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="@color/gray"
		        android:textSize="@dimen/ViewSample_TextSize"
		        android:layout_gravity="center_vertical"
		        android:paddingLeft="@dimen/ViewSample_paddingLeft"
		        android:text="包装状态："/>
	        <TextView 
	            android:id="@+id/TextViewTakeoverPackStatus"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="@color/gray"
		        android:textSize="@dimen/ViewSample_TextSize"
		        android:layout_gravity="center_vertical"
		        android:paddingLeft="5dp"/>
	        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="5dp"
                android:textColor="@color/gray"
                android:textSize="@dimen/ViewSample_TextSize" />
	    </LinearLayout>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:background="#e9f2e6"
        android:orientation="vertical">
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <ImageView
	            android:id="@+id/ImageViewConclusion" 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_vertical"
		        android:paddingLeft="10dp"
		        android:src="@drawable/conclusion_pic"/>
	        <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="@color/gray"
		        android:textSize="@dimen/ViewSample_TextSize"
		        android:layout_gravity="center_vertical"
		        android:paddingLeft="5dp"
		        android:text="结论："/>
        </LinearLayout>
		<View 
		    android:layout_width="match_parent"
		    android:layout_height="1dp"
		    android:background="@color/theme_green"
		    android:layout_marginLeft="40dp"
		    android:layout_marginRight="40dp"
		    />
		<TextView 
		    android:id="@+id/TextViewTakeoverVerdict"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_margin="5dp"
	        android:textColor="@color/gray"
	        android:textSize="@dimen/ViewSample_TextSize"
	        android:layout_gravity="center_vertical"
	        android:paddingLeft="5dp"/>
    </LinearLayout>
    
</LinearLayout>